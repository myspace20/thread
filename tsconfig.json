{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "rootDirs": ["/server"],
    "alwaysStrict": false,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["server/**/*", "scripts/keypair.mjs", "jest.setup.js", "!**/*.spec.ts"],
  "exclude": ["node_modules", "**/*.spec.*", "**/*.test.*"]
}
